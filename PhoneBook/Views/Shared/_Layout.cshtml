<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap-slate.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.6.2.js"></script>
	<script src="~/Scripts/jquery-1.10.2.js"></script>
	<script src="~/Scripts/jquery.maskedinput.js"></script>
	<script src="~/Scripts/IndexEngine.js"></script>
	<script src="~/Scripts/bootstrap-slate.js"></script>

</head>
<body>

	<nav class="navbar navbar-default">
		<div class="navbar navbar-inverse navbar-fixed-top">
			<form class="navbar-form navbar-left" role="search">
					<input id="txtSearch" type="text" class="form-control" placeholder="Введите имя для поиска..." style="width:600px">
			</form>
			<div class="container">
				<div class="navbar-header">
					@Html.ActionLink("Телефонный справочник", "Index", "Home", new { page = 1 }, new { @class = "navbar-brand", style = "text-align:center; width:700px" })
				</div>
				<img src="~/Content/Images/ArrowUp.png" id="upArrow" width="50" style="margin-top:4px; margin-left:100px; cursor: pointer;" hidden="hidden"/>
			</div>
		</div>
	</nav>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year Дмитриев Глеб</p>
			<p><b><a href="mailto:ya.dmitrievgleb@yandex.ru">Написать письмо разработчику</a></b></p>
		</footer>
	</div>

</body>
</html>